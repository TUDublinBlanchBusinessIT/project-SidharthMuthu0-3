drop database if exists hotel;
 create database hotel;
 use hotel;
CREATE TABLE Guest (
    id INT AUTO_INCREMENT,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    phone_number VARCHAR(15),
    email VARCHAR(100),
    national_id VARCHAR(20) UNIQUE,
    created_at DATETIME,
    updated_at DATETIME,
    deleted_at DATETIME,
    PRIMARY KEY(id)
);

CREATE TABLE Booking (
    id INT AUTO_INCREMENT,
    guest_id INT,
    room_number INT,
    check_in_date DATE,
    check_out_date DATE,
    payment_status ENUM('Pending', 'Paid', 'Cancelled') DEFAULT 'Pending',
    created_at DATETIME,
    updated_at DATETIME,
    PRIMARY KEY(id),
    FOREIGN KEY (guest_id) REFERENCES Guest(id)
);

CREATE TABLE Staff (
    id INT AUTO_INCREMENT,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    position VARCHAR(50),
    phone_number VARCHAR(15),
    email VARCHAR(100),
    hire_date DATE,
    created_at DATETIME,
    updated_at DATETIME,
    PRIMARY KEY(id)
);